---
const { postData } = Astro.props;
let first_Post = postData[0];
let second_Post = postData[1];
let imgHeight = "280px";
---

<div class="col-lg-4">
  <!-- Trending Top -->
  <div class="row">
    <div class="col-lg-12 col-md-6 col-sm-6">
      <div class="trending-top mb-30">
        <div class="trend-top-img">
          <img
            src="https://source.unsplash.com/random"
            height={imgHeight}
            alt=""
          />
          <div class="trend-top-cap trend-top-cap2">
            <span class="bgb">{first_Post.tags[0]}</span>
            <h2>
              <a href=`/blog/${first_Post.slug}`>{first_Post.title}</a>
            </h2>
            <p>by {first_Post.author} - {first_Post.date}</p>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-12 col-md-6 col-sm-6">
      <div class="trending-top mb-30">
        <div class="trend-top-img">
          <img
            src="https://source.unsplash.com/random"
            height={imgHeight}
            alt=""
          />
          <div class="trend-top-cap trend-top-cap2">
            <span class="bgg">{second_Post.tags[0]}</span>
            <h2>
              <a href=`/blog/${second_Post.slug}`>{second_Post.title}</a>
            </h2>
            <p>by {second_Post.author} - {second_Post.date}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
