---
import mongoose from "mongoose";
import "dotenv/config"
mongoose.connect(process.env.MONGO);
mongoose.connection.on("connected", () => console.log("Database Connected!"));
import Header from "../components/Header.astro";
import Footer from "../components/Footer/Footer.astro";
export interface Props {
  title: string;
}

const { title } = Astro.props;

---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Sunbeam Lahartara's Blog" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image" href="/favicon.png" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
    <!-- CSS here -->
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/assets/css/owl.carousel.min.css" />
    <link rel="stylesheet" href="/assets/css/ticker-style.css" />
    <link rel="stylesheet" href="/assets/css/flaticon.css" />
    <link rel="stylesheet" href="/assets/css/slicknav.css" />
    <link rel="stylesheet" href="/assets/css/animate.min.css" />
    <link rel="stylesheet" href="/assets/css/magnific-popup.css" />
    <link rel="stylesheet" href="/assets/css/fontawesome-all.min.css" />
    <link rel="stylesheet" href="/assets/css/themify-icons.css" />
    <link rel="stylesheet" href="/assets/css/slick.css" />
    <link rel="stylesheet" href="/assets/css/nice-select.css" />
    <link rel="stylesheet" href="/assets/css/style.css" />

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"></script>
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />

    <!-- JS here -->

    <script is:inline src="/assets/js/vendor/modernizr-3.5.0.min.js"></script>
    <!-- Jquery, Popper, Bootstrap -->
    <script is:inline src="/assets/js/vendor/jquery-1.12.4.min.js"></script>
    <script is:inline src="/assets/js/popper.min.js"></script>
    <script is:inline src="/assets/js/bootstrap.min.js"></script>
    <!-- Jquery Mobile Menu -->
    <script is:inline src="/assets/js/jquery.slicknav.min.js"></script>

    <!-- Jquery Slick , Owl-Carousel Plugins -->
    <script is:inline src="/assets/js/owl.carousel.min.js"></script>
    <script is:inline src="/assets/js/slick.min.js"></script>
    <!-- Date Picker -->
    <script is:inline src="/assets/js/gijgo.min.js"></script>
    <!-- One Page, Animated-HeadLin -->
    <script is:inline src="/assets/js/wow.min.js"></script>
    <script is:inline src="/assets/js/animated.headline.js"></script>
    <script is:inline src="/assets/js/jquery.magnific-popup.js"></script>

    <!-- Scrollup, nice-select, sticky -->
    <script is:inline src="/assets/js/jquery.scrollUp.min.js"></script>
    <script is:inline src="/assets/js/jquery.nice-select.min.js"></script>
    <script is:inline src="/assets/js/jquery.sticky.js"></script>

    <!-- Jquery Plugins, main Jquery -->
    <script is:inline src="/assets/js/plugins.js"></script>
    <script is:inline src="/assets/js/main.js"></script>
  </body>
</html>
<style is:global>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }
  body {
    background: #ebebeb;
  }
</style>
